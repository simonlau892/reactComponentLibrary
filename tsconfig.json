{
  "compilerOptions": {
    "rootDir": "./components/",
    "outDir": "./dist/",
    "esModuleInterop": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "types": ["jest"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["components/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "components/**/*.stories.tsx",
    "components/**/*.test.tsx"
  ]
}
